{
  "name": "First Chrome Extension",
  "description": "This is a First Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Author Name",
  "icons": {
    "16" : "favicon.ico",
    "48" : "favicon.ico",
    "128" : "favicon.ico"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions" :[
    "scripting" , "cookies" , "tabs"
  ],
  "host_permissions" : [
      "https://leetcode.com/graphql",
      "<all_urls>"
  ],
  "optional_host_permissions":[
    "https://*/*",
    "http://*/*"
  ]
}